name: Notify

on: 
  discussion: 
    types: [created, edited, answered]
  issues:
    types: [opened, edited, milestoned]
    
jobs:
  greeting:
    runs-on: ubuntu-latest
    steps:
    - name: WeCom (WeChat Work) Group Robot
      uses: MeanZhang/wecom-group-robot@v1.2
      with:
        key: ${{ secrets.WECOM_TOKEN }}
        msgtype: text
        content: hello
